<p id="notice"><%= notice %></p>

<div class="pl-4">
  <p>
    <strong>物件名:</strong>
    <%= @property.name %>
  </p>
  <br>
  <p>
    <strong>賃料:</strong>
    <%= @property.rent %>
  </p>
  <br>
  <p>
    <strong>住所:</strong>
    <%= @property.address %>
  </p>
  <br>
  <p>
    <strong>築年数:</strong>
    <%= @property.age %>
  </p>
  <br>
  <p>
    <strong>備考:</strong>
    <%= @property.remark %>
  </p>
</div>

<hr>

<% if @property.nearest_stations.any? %>
<% @nearest_stations.each_with_index do |nearest_station, i| %>
  <h3 class="mb-3">最寄り駅<%= "#{i+1}" %></h3>
  <p class="pl-3">
    <strong>路線名:</strong> 
    <%= nearest_station.line %>
  </p>
  <br>
  <p class="pl-3">
    <strong>駅名:</strong> 
    <%= nearest_station.station %>
  </p>
  <br>
  <p class="pl-3">
    <strong>徒歩分数:</strong>
    <%= nearest_station.on_foot %>
  </p>
  <br>
  <% end %>
  <% else %>
    <p>最寄り駅の登録はありません</p>
  <% end %>

<%= link_to '編集', edit_property_path(@property) %> |
<%= link_to '戻る', properties_path %>
